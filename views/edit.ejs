<!DOCTYPE html>
<html lang="en">

<head>
	<title>StandUp</title>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<% include partials/links %>
</head>

<body>
	<% include partials/flashmessage %>
	<div class="mainContainer">
		<div class="content">
			<% include partials/admin/sidebar %>
			<div class="innerContainer">
				<div class="heading">
					<h3>Edit Profile</h3>
				</div>
				<div class="formContainer">
					<h3>Edit Your Profile</h3>
					<form method="post" action="/users/edit/<%= user._id %>">
						<div class="form-row">
							<div class="form-group col-md-6">
								<label for="FirstName">FirstName</label>
								<input type="text" class="form-control" id="firstname" name="firstname"
									placeholder="Email" value="<%= user.firstname %>">
							</div>
							<div class="form-group col-md-6">
								<label for="Lastname">Lastname</label>
								<input type="text" class="form-control" id="lastname" name="lastname"
									value="<%= user.lastname %>" placeholder="Lastname">
							</div>

							<div class="form-group col-md-6">
								<label for="Email">Email</label>
								<input type="text" class="form-control" id="email" name="email" placeholder="Email"
									value="<%= user.email %>">
							</div>
							<div class="form-group col-md-6">
								<label for="Department">Department</label>
								<select id="department" class="form-control" name="department" style="margin: 5px 0;">
									<option value=""> Choose...</option>
									<option value="Finance">Finance</option>
									<option value="Technology">Technology</option>
								</select>
							</div>


							<div class="form-group col-md-6">
								<label for="Gender">Gender</label>
								<select id="gender" name="gender" class="form-control">
									<option value=""> Choose...</option>
									<option value="Male">Male</option>
									<option value="Female">Female</option>
								</select>
							</div>

							<div class="form-group col-md-6">
								<label for="Role">Role</label>
								<select id="gender" name="role" class="form-control">
									<option value="">Choose...</option>
									<option value="Admin">Admin</option>
									<option value="None">None</option>
								</select>
							</div>
						</div>
						<input type="hidden" class="form-control" id="password" name="password"
							value="<%= user.password %>">
						<input type="submit" value="Submit" />
					</form>
				</div>

			</div>
		</div>
	</div>
	<% include partials/scripts %>
</body>

</html>