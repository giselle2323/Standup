<!DOCTYPE html>
<html lang="en">

	<head>
		<title>StandUp</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<% include partials/links %>
		<link href="/assets/table.css" rel="stylesheet" />
		<link href="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.css" rel="stylesheet">
	</head>

	<body>
		<div class="mainContainer" id="wrapper">
			<div class="content">
				<% include partials/admin/sidebar %>
				<div class="innerContainer">
					<% include partials/flashmessage %>
					<div class="heading">
						<i class="fa fa-bars fa-fw toggle" id="menu-toggle"></i>
						<h3>All Users</h3>
						<a class="toplink" href="/users/create">Create User</a>
					</div>
					<div class="tableContainer table-responsive">
						<table id="table" class = "card-table table">
							<tr>
								<th>Firstname</th>
								<th>Lastname</th>
								<th>Gender</th>
								<th>Email</th>
								<th>Department</th>
								<th>Role</th>
								<th>Actions</th>
							</tr>
							<% for (var key in users) { %>
							<tr>
								<td><%= users[key].firstname %></td>
								<td><%= users[key].lastname %></td>
								<td><%= users[key].gender %></td>
								<td><%= users[key].email %></td>
								<td><%= users[key].department %></td>
								<td><%= users[key].role %></td>
								<td>
									<a href="/users/edit/<%= users[key]._id %>">
										<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
									</a>
									<a href="/users/delete/<%= users[key]._id %>"
										onclick="return confirm('Are you sure you want to delete this user?') ">
										<i class="fa fa-trash" aria-hidden="true"></i>
									</a>
								</td>
							</tr>
							<% } %>
						</table>
					</div>
				</div>
			</div>
		</div>
		<% include partials/scripts %>
	</body>

</html>