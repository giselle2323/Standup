<!DOCTYPE html>
<html lang="en">

    <head>
        <title>StandUp</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <% include partials/links %>
    </head>

    <body>
        <% include partials/flashmessage %>
        <div class="mainContainer">
            <div class="content">
                <% include partials/admin/sidebar %>
                <div class="innerContainer">
                    <div class="heading">
                        <h3>Create An Activity </h3>
                    </div>
                    <div class="formContainer">
                        <form method="post" action="/events/activity/<%= eventId %>/create">
                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <label for="Activity Name">Activity Name</label>
                                    <input type="text" class="form-control " id="name" name="name"
                                        placeholder="activity name" required>
                                </div>
                                
                                <div class="form-group col-md-6">
                                    <label for="activity Type">Activity Type</label>
                                    <select name="activityType" id="activityType">
                                        <option value=""> Choose....
                                        </option>
                                        <% for (var key in activityTypes) { %>
                                        <option value="<%= activityTypes[key].activity%>"><%= activityTypes[key].activity%>
                                        </option>
                                        <% } %>
                                    </select>
                                    <input type="hidden" name="event_id" value="<%= eventId %>">
                                </div>
                            </div>

                            <div class="form-row" style="margin-top: -5px;">
                                <div class="form-group col-md-12">
                                    <label for="Instructions">Instructions</label>
                                    <textarea class="form-control" name="instructions" placeholder="instructions"
                                        aria-label="With textarea" required></textarea>

                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="Description">Description</label>
                                    <textarea class="form-control" name="description" 
                                        aria-label="With textarea" required> 
                                    </textarea>
                                </div>
                                <input type="submit" value="Submit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% include partials/scripts %>
    </body>

</html>