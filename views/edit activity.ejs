<!DOCTYPE html>
<html lang="en">

<head>
	<title>StandUp</title>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<% include partials/links %>
</head>

<body>
	<% include partials/flashmessage %>
	<div class="mainContainer">
		<div class="content">
			<% include partials/admin/sidebar %>
			<div class="innerContainer">
				<div class="heading">
					<h3>Edit Activity </h3>
				</div>
				<div class="formContainer">
					<form method="post" action="/activity/edit/<%= activity._id %>">
						<div class="form-row">
							<div class="form-group col-md-6">
								<label for="Activity Name">Activity Name</label>
								<input type="text" class="form-control" id="name" name="name" placeholder="activity name" value="<%= activity.name %>" required>
							</div>
							<div class="form-group col-md-6">
								<label for="Instructions">Instructions</label>
								<input type="text" class="form-control" id="instructions" name="instructions" placeholder="instructions"
									value="<%= activity.instructions %>" required>
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<label for="Description">Description</label>
								<input type="text" class="form-control" id="description" name="description" placeholder="description" value="<%= activity.description %>" required>
						
							</div>
							<div class="form-group col-md-6">
								<label for="activity Type">Activity Type</label>
						
								<select name="activityType" id="activityType">
									<option value="<%= activity.activityType %>"><%= activity.activityType %>
									</option>
								</select>
								<input type="hidden" name="event_id" value="<%= activity.event_id %>">
							</div>
						<input type="submit" value="Submit" style="margin-left: 5px;">
					</form>
				</div>
			</div>
		</div>
	</div>
	<% include partials/scripts %>
</body>

</html>