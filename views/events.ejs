<!DOCTYPE html>
<html lang="en">

<head>
	<title></title>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<% include partials/links %>
	<link rel="stylesheet" type="text/css" href="/assets/table.css" />


	<style>
		.events-heading {
			background-color: #ffffff;
			margin: 0px 0px 20px;

		}

		.inner-container {
			background-color: #4950571c;
			width: 85%;
			display: flex;
			flex-direction: column;
		}

		.events-heading h3 {
			margin: 38px 27px;
			color: #4bac4e;
			font-size: 30px;
			font-weight: bold;
		}

		.events-container {
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
		}

		.events {

			width: 30%;
			margin: 1%;
			color: #000000;
			box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
			text-align: center;
			height: 300px;
		}

		form {
			display: inherit;
		}

		.container {
			position: relative;
			margin: auto;
			overflow: hidden;
			width: 47%;
			height: 350px;
			background: #ffffff;
			box-shadow: 5px 5px 25px rgba(158, 158, 158, 0.24);
			border-radius: 10px;
		}

		p {
			font-size: 0.6em;
			color: #ba7e7e;
			letter-spacing: 1px;
		}

		h1 {
			font-size: 1.2em;
			color: #000000;
			margin-top: -5px;
		}

		h2 {
			color: #c3a1a0;
			margin-top: -5px;
		}

		img {
			width: 50%;
			margin-top: 47px;
		}

		.product {
			position: absolute;
			width: 40%;
			height: 100%;
			top: 10%;
			left: 60%;
			padding: 10px;
		}

		.product h2 {
			color: #4e4e4eba;
			font-size: 22px;
		}

		.product p {
			color: #4e4e4eba;
			font-size: 14px;
		}

		.desc {
			text-transform: none;
			letter-spacing: 0;
			margin-bottom: 17px;
			color: #4e4e4e;
			font-size: 0.7em;
			line-height: 1.6em;
			margin-right: 25px;
			text-align: justify;
		}

		button {
			background: #4caf50fa;
			padding: 10px;
			display: inline-block;
			outline: 0;
			border: 0;
			margin: -1px;
			border-radius: 5px;
			text-transform: uppercase;
			letter-spacing: 1px;
			color: #f5f5f5;
			cursor: pointer;
		}

		button:hover {
			background: #ba7e7e;
			transition: all 0.4s ease-in-out;
		}

		.add {
			width: 67%;
		}

		.like {
			width: 22%;
		}


		.pick {
			margin-top: 11px;
			margin-bottom: 0;
			margin-left: 20px;
		}
	</style>
</head>

<body>
	<div class="mainContainer">
		<div class="content">
				<% include partials/sidebar %>
			<div class="inner-container">

				<div class="events-heading">
					<h3>Events</h3>
				</div>
				<div class="events-container">
					<% for(var key in active_events) { %>
					<div class="container">
						<div class="images">
							<img src="https://cdn.pixabay.com/photo/2015/10/21/10/27/calendar-999172_960_720.jpg" />
						</div>
						<div class="product">
							<h1><%= active_events[key].name %></h1>
							<h2><%= active_events[key].status %></h2>
							<p class="desc"><%= active_events[key].description %>.</p>
							<div class="button">
								<% if (user.event_id.includes(active_events[key]._id.toString())) { %>
								<button type="button">You are checked in</button>
								<%} else { %>
								<form method="post" action="/checkin">
									<button type="submit">Checkin</button>
									<input type="hidden" name="user_id" value="<%= user._id %>">
									<input type="hidden" name="event_id" value="<%= active_events[key]._id %>">
							
								</form>
								<% } %>
							</div>
							
						</div>
					</div>
				



					<% } %>




				</div>
			</div>
		</div>
		<% include partials/scripts %>
</body>

</html>