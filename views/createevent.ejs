<!DOCTYPE html>
<html lang="en">

	<head>
		<title>StandUp</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<% include partials/links %>
	</head>

	<body>
		<div class="mainContainer" id="wrapper">
			<div class="content">
				<% include partials/admin/sidebar %>
				<div class="innerContainer">
					<% include partials/flashmessage %>
					<div class="heading">
						<i class="fa fa-bars fa-fw toggle" id="menu-toggle"></i>
						<h3>Create Event</h3>
					</div>
					<div class="formContainer">
						<form method="post" action="/events">

							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="name">Event Name</label>
									<input type="text" id="name" name="name" placeholder="Event name.." />
								</div>
								<div class="form-group col-md-6">
									<label for="description">Event Date</label>
									<input type="date" class="form-control" name="eventDate"  style="margin-top: 10px; height: 44px;" />
								</div>
							</div>

							<div class='form-row'>
								<div class="form-group col-md-12">
									<label for="description">Description</label>
									<textarea class="form-control" name="description" aria-label="With textarea" required></textarea>
								</div>
							</div>
							<input type="hidden" id="status" name="status" value="pending" />
							<input type="submit" value="Submit" />
						</form>
					</div>
				</div>
			</div>
		</div>
		
		<% include partials/scripts %>
		<script>
			$(function () {
				$('#datetimepicker1').datetimepicker();
			});
		</script>
	</body>

</html>