<!DOCTYPE html>
<html lang="en">

	<head>
		<title>StandUp</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<% include partials/links %>
		<link rel="stylesheet" type="text/css" href="/assets/table.css" />
	</head>

	<body>
		<div class="mainContainer" id="wrapper">
			<div class="content">
				<% include partials/admin/sidebar %>

				<div class="innerContainer">
					<% include partials/flashmessage %>
					<div class="heading">
						<i class="fa fa-bars fa-fw toggle" id="menu-toggle"></i>
						<h3>All Events</h3>
						<a class="toplink" href="/events/create ">Create Event</a>
					</div>
					<div class="tableContainer table-responsive">
						<table id="table" class="table">
							<tr>
								<th>Name</th>
								<th>Status</th>
								<th>Event Date</th>
								<th>Description</th>
								<th>Actions</th>
							</tr>
							<% for (var key in events) { %>
								<tr>
									<td><%= events[key].name %></td>
									<td><%= events[key].status %></td>
									<td><%= events[key].eventDate.toDateString() %></td>
									<td><%= events[key].description %></td>
									<td class="links">
										<a class="view" href="/events/<%= events[key]._id %>">
											<i class="fa fa-eye" aria-hidden="true"></i>
										</a>
									</td>
								</tr>
							<% } %>
						</table>
					</div>
				</div>
			</div>
		</div>
		<% include partials/scripts %>
	</body>

</html>