<!DOCTYPE html>
<html lang="en">

<head>
	<title>StandUp</title>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link href="/assets/table.css" rel="stylesheet" />
	<% include partials/links %>

</head>

<body>
	<% include partials/flashmessage %>
	<div class="mainContainer">
		<div class="content">
			<% include partials/admin/sidebar %>
			<div class="innerContainer">
				<% for(var key in event) { %>
				<div class="heading">
					<h3>View Event</h3>
					<a class="toplink" href="/events/activity/<%= event[key]._id %>/create">Create Activity</a>
				</div>
				<div class="card">
					<div class= "card-header">
						Event
					</div>
					<div class="card-body" style="position: relative;">
						<h5 class="card-title custom-card-header"><%= event[key].name %></h5>
						<p class="card-text"><%= event[key].description %>.</p>
						<p class="card-text"><%= event[key].eventDate.toDateString() %>.</p>
						<a href="/events/edit/<%= event[key]._id %>">
							<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
						</a>
						<a href="/events/delete/<%= event[key]._id %>"
							onclick="return confirm('Are you sure you want to delete this event?')">
							<i class="fa fa-trash"></i>
						</a>
					</div>

				</div>
				<% } %>
				<% if(event[key].eventactivities  < 0) { %>
				<div class="card">
					<div class="card-header">
						Event Activities
					</div>
					<div class="card-body">
						<h5 class="card-text"> There is no actiivty for this event</h5>
					</div>
				</div>
				<% } else { %>
				<% for(var element in event[key].eventactivities) { %>
				<div class="tableContainer table-responsive">
					<table id="table" class="card-table table">
						<tr>
							<th>Name</th>
							<th>Instructions</th>
							<th>Description</th>
							<th>Activity Type</th>
							<th>Created Date</th>
							<th>Actions</th>
						</tr>
						<tr>
							<td><%= event[key].eventactivities[element].name %></td>
							<td><%= event[key].eventactivities[element].instructions %>.</td>
							<td><%= event[key].eventactivities[element].description %>.</td>
							<td><%= event[key].eventactivities[element].activityType %></td>
							<td><%= event[key].eventactivities[element].createdAt.toDateString() %></td>
							<td class="links">
								<a href="/activity/question/<%= event[key].eventactivities[element]._id %>"><i class="fa fa-eye"
										aria-hidden="true"></i></a>
								<a href="/activity/edit/<%= event[key].eventactivities[element]._id %>">
									<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
								</a>
								<a href="/activity/delete/<%= event[key].eventactivities[element]._id %>"
									onclick="return confirm('Are you sure you want to delete this activity?')">
									<i class="fa fa-trash" aria-hidden="true"></i>
								</a>
							</td>
						</tr>
					</table>
				</div>

				<% } %>
				<% } %>
			</div>
		</div>
	</div>
	<% include partials/scripts %>
</body>

</html>