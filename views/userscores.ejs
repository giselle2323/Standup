<!DOCTYPE html>
<html lang="en">

	<head>
		<title>StandUp</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<% include partials/links %>
		<link href="/assets/table.css" rel="stylesheet" />
	</head>

	<body>
		<div class="mainContainer" id="wrapper">
			<div class="content">
				<% include partials/sidebar %>

				<div class="innerContainer">
					<% if(!userscore.length) { %>
					<div class="heading">
					<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">
						<i class="fa fa-bars fa-fw"></i>
					</a>
						<h3>Sorry, there is no data to display</h3>
					</div>
					<% } else { %>
						<div class="heading">
							<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">
								<i class="fa fa-bars fa-fw" style="position: fixed;"></i>
							</a>
							<h3>User Scores</h3>
						</div>
						<div class="tableContainer table-responsive">
							<table id="table" class="table">
								<tr>
									<th>Event Title</th>
									<th>Score</th>
									<th>Date</th>
								</tr>
								<% for (var key in userscore) { %>
									<tr>
										<td><%= userscore[key].activity_name %></td>
										<td><%= userscore[key].score %></td>
										<td><%= userscore[key].createdAt.toLocaleString() %></td>
									</tr>
								<% } %>
							</table>
						</div>
					<% } %>
				</div>
			</div>
		</div>
		<% include partials/scripts %>
	</body>

</html>