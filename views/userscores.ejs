<!DOCTYPE html>
<html lang="en">

	<head>
		<title>StandUp</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<% include partials/links %>
		<link href="/assets/table.css" rel="stylesheet" />
	</head>

	<body>
		<div class="mainContainer" id="wrapper">
			<div class="content">
				<% include partials/sidebar %>

				<div class="innerContainer">
					<% include partials/flashmessage %>
					<div class="heading">
						<i class="fa fa-bars fa-fw toggle" id="menu-toggle"></i>
						<h3>User Scores</h3>
					</div>
					<% if(!userscore.length) { %>
						<div class="card">
                        <div class="card-header s-custom-card-header">
                            Activity
                        </div>
                        <div class="card-body">
                            <h4 class="card-title s-custom-card-title">You have not taken any quiz</h4>
							<button class="link" onclick="window.location.href='/events'">
								Take A Quiz Now
							</button>
                        </div>
                    </div>
					<% } else { %>
						
						<div class="tableContainer table-responsive">
							<table id="table" class="table">
								<tr>
									<th>Event Title</th>
									<th>Score</th>
									<th>Date</th>
								</tr>
								<% for (var key in userscore) { %>
									<tr>
										<td><%= userscore[key].activity_name %></td>
										<td><%= userscore[key].score %></td>
										<td><%= userscore[key].createdAt.toLocaleString() %></td>
									</tr>
								<% } %>
							</table>
						</div>
					<% } %>
				</div>
			</div>
		</div>
		<% include partials/scripts %>
	</body>

</html>