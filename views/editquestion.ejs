<!DOCTYPE html>
<html lang="en">

	<head>
		<title></title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<% include partials/links %>
	</head>

	<body>
		<div class="mainContainer" id="wrapper">
			<div class="content">
				<% include partials/admin/sidebar %>
				<div class="innerContainer">
					<% include partials/flashmessage %>
					<div class="heading">
						<i class="fa fa-bars fa-fw toggle" id="menu-toggle"></i>
						<h3>Edit Questions And Answers</h3>
					</div>
					<div class="formContainer">
						<form method="post" action="/activity/editquestion/<%= question._id %>">
							<label for="Question">Questions</label>
							<br />
							<input type="text" id="question" name="question" placeholder="Question.." value="<%= question.question %>" />
							<br />
							<label for="answer 1">Answer 1</label>
							<input type="text" id="answer 1" name="answers[]" placeholder="Your answer.."
								value="<%= question.answers[0] %>" />
							<br />
							<label for="answer 2">Answer 2</label>
							<input type="text" id="answer 2" name="answers[]" placeholder="Your answer"
								value="<%= question.answers[1] %>" />
							<br />
							<label for="answer 3">Answer 3</label>
							<input type="text" id="answer 3" name="answers[]" placeholder="Your answer"
								value="<%= question.answers[2] %>" />
							<br />
							<label for="answer 3">Correct Answer</label>
							<input type="text" id="correctAnswer" name="correctAnswer" placeholder="Your answer"
								value="<%= question.correctAnswer %>" />
							<input type="hidden" id="activity id" name="activity_id" value="<%= question.activity_id %>" />
						    <input type="submit" value="Submit">
						</form>
					</div>
				</div>
			</div>
		</div>
		<% include partials/scripts %>
	</body>

</html>